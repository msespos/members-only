<% unless current_user %>
  <%= button_to "login", new_user_session_path, method: :get %>
  <%= button_to "sign up", new_user_registration_path, method: :get %>
<% end %>
<% if current_user %>
  <%= current_user.username %>
  <%= button_to "logout", destroy_user_session_path, method: :delete  %>
  <%= button_to "make a new post", new_post_path, method: :get %>
<% end %>
<h1>All of the posts</h1>
<div class="post-boxes-container">
  <% @posts.each do |post| %>
    <div class="post-box">
      <%= post.body %>
      <%= time_ago_in_words(post.created_at) %>
      <% if current_user %>
        <%= post.user.username %>
      <% end %>
    </div>
  <% end %>
</div>
